{# /src//ingredientBundle/Resources/views/Aliment/home.html.twig #}

{% extends "::base.html.twig" %}

{% block title %}
Home - ingredient - {{ parent() }}
{% endblock %}

{% block body -%}
<h1>Aliments' list:</h1>
<hr>

<p>Quick search: <input type=text id="recherche"></p>

<table class="footable table table-hover table-bordered table-condensed" 
       data-filter=#recherche 
       data-page-navigation="#pagination" 
       data-page-size="15">
    <thead>
        <tr>
            <th data-toggle="true"></th>
            <th>Name</th>
            <th data-type="numeric" data-hide="all">Barcode</th>
        </tr>
    </thead>
    <tbody>
    {%- for aliment in aliments %}
        <tr>
            <td></td>
            <td><a href="{{ path("nutri_ingredient_aliment_see", { "aliment_id": aliment.id }) }}">{{aliment.name}}</a></td>
            <td>{{aliment.barcode}}</td>
        </tr>
    {%- endfor %}
    </tbody>
    <tfoot class="hide-if-no-paging">
        <tr>
            <td colspan="6">
                <div class="text-center"><ul id="pagination" class="pagination pagination-centered"></ul></div>
            </td>
        </tr>
    </tfoot>
</table>
    
{% endblock %}
