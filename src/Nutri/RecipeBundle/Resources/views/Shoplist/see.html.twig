{% extends "::base.html.twig" %}

{% block title %}
{{shoplist}} - Recipe - {{ parent() }}
{% endblock %}

{% block body -%}
<h1>Shoplist {{shoplist}}</h1>

{# -------------------------------------------------------------------------- #}
{# ------------------------------- Sub nav ---------------------------------- #}
{% include '::confirmDelete.html.twig' %}
