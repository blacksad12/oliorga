    {% set seeMenu = knp_menu_get( 'NutriRecipeBundle:BuilderShoplist:seeMenu' , [], {'shoplist': shoplist}) %} 
    {{ mopa_bootstrap_menu(seeMenu, {'automenu': 'pills', 'stacked':false}) }}
