{# /src/Finance/OperationBundle/Resources/views/AbstractOperation/home.html.twig #}

{% extends "::base.html.twig" %}

{% block title %}
{%trans%}Home{%endtrans%} - {%trans%}Operation{%endtrans%} - {{ parent() }}
{% endblock %}

{% block body -%}
<h1>{%trans%}AbstractOperations' list:{%endtrans%}</h1>
<hr>

<p>{%trans%}Quick search: {%endtrans%}<input type=text id="search"></p>

<table class="footable table table-hover table-bordered table-condensed" 
       data-filter=#search 
       data-page-navigation="#pagination" 
       data-page-size="15">
    <thead>
        <tr>
            <th data-toggle="true"></th>
            <th data-type="numeric">{%trans%}Date{%endtrans%}</th>
            <th data-type="numeric">{%trans%}Amount{%endtrans%}</th>
            <th>{%trans%}IsMarked{%endtrans%}</th>        </tr>
    </thead>
    <tbody>
    {%- for abstractoperation in abstractoperations %}
        <tr>
            <td></td>
            <td>{#<a href="{{ path("finance_operation_abstractoperation_see", { "abstractoperation_id": abstractoperation.id }) }}">#}{{abstractoperation.date|date('d/m/Y')}}{#</a>#}</td>
            <td>{{abstractoperation.amount}}</td>
            <td>{{abstractoperation.isMarked}}</td>
        </tr>
    {%- endfor %}
    </tbody>
    <tfoot class="hide-if-no-paging">
        <tr>
            <td colspan="4">
                <div class="text-center"><ul id="pagination" class="pagination pagination-centered"></ul></div>
            </td>
        </tr>
    </tfoot>
</table>
    
{% endblock %}
