{# /src/Finance/OperationBundle/Resources/views/Imputation/home.html.twig #}

{% extends "::base.html.twig" %}

{% block title %}
{%trans%}Home{%endtrans%} - {%trans%}Operation{%endtrans%} - {{ parent() }}
{% endblock %}

{% block body -%}
<h1>{%trans%}Imputations' list:{%endtrans%}</h1>
<hr>
<a class="btn btn-default" href="{{path('finance_operation_imputation_add')}}" role="button"><span class="glyphicon glyphicon-plus"></span> {%trans%}Add{%endtrans%}</a>

<p>{%trans%}Quick search: {%endtrans%}<input type=text id="search"></p>

<table class="footable table table-hover table-bordered table-condensed" 
       data-filter=#search 
       data-page-navigation="#pagination" 
       data-page-size="15">
    <thead>
        <tr>
            <th data-toggle="true"></th>
            <th>{%trans%}Name{%endtrans%}</th>
            <th data-type="numeric">{%trans%}StartDate{%endtrans%}</th>
            <th data-type="numeric">{%trans%}EndDate{%endtrans%}</th>
            <th>{%trans%}Parent{%endtrans%}</th>        </tr>
    </thead>
    <tbody>
    {%- for imputation in imputations %}
        <tr>
            <td></td>
            <td><a href="{{ path("finance_operation_imputation_see", { "imputation_id": imputation.id }) }}">{{imputation.name}}</a></td>
            <td data-value="{{ imputation.startDate|date("U") }}">{{ imputation.startDate is not empty ? imputation.startDate|date("Y-m-d") }}</td>
            <td data-value="{{ imputation.endDate|date("U") }}">{{ imputation.endDate is not empty ? imputation.endDate|date("Y-m-d") }}</td>
            <td><a href="{{ path("finance_operation_imputation_see", { "parent_id": imputation.parent.id }) }}">{{imputation.parent}}</a></td>
        </tr>
    {%- endfor %}
    </tbody>
    <tfoot class="hide-if-no-paging">
        <tr>
            <td colspan="5">
                <div class="text-center"><ul id="pagination" class="pagination pagination-centered"></ul></div>
            </td>
        </tr>
    </tfoot>
</table>
    
{% endblock %}
